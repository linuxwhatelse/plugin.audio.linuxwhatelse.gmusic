<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.linuxwhatelse.gmusic"
       name="Google Play Music"
       version="1.6.3"
       provider-name="linuxwhatelse">

    <requires>
        <!-- kodi repository -->
        <import addon="xbmc.python" version="2.20.0"/>

        <!-- linuxwhatelse repository -->
        <import addon="script.module.gmusicapi" version="10.1.0"/>
        <import addon="script.module.linuxwhatelse.mapper" version="3.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" start="login"/>

    <extension point="kodi.context.item" library="context.py">
        <item>
            <label>30060</label>
            <visible>Window.IsActive(musicplaylist) + SubString(ListItem.Path,plugin://plugin.audio.linuxwhatelse.gmusic)</visible>
        </item>
    </extension>

    <extension point="xbmc.addon.metadata">
        <platform>linux windx</platform>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, June 2007</license>
        <forum>http://forum.kodi.tv/showthread.php?tid=245754</forum>
        <source>https://github.com/linuxwhatelse/plugin.audio.linuxwhatelse.gmusic</source>
        <website>http://www.linuxwhatelse.com</website>
        <email>info@linuxwhatelse.com</email>
        <summary lang="en">Google Play Music</summary>
        <summary lang="de">Google Play Music</summary>
        <description lang="en">Plugin that lets you manage and stream music from Google Play Music</description>
        <description lang="de">Plugin das dich die Musik von Google Play Music verwalten und streamen l√§sst</description>
    </extension>
</addon>
