<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.linuxwhatelse.gmusic"
       name="Google Play Music"
       version="1.3.8"
       provider-name="linuxwhatelse">

    <requires>
        <import addon="xbmc.python"                        version="2.20.0"/>
        <import addon="script.module.beautifulsoup4"       version="4.3.2"/>
        <import addon="script.module.dateutil"             version="2.4.2"/>
        <import addon="script.module.six"                  version="1.9.0"/>
        <import addon="script.module.validictory"          version="0.9.3"/>
        <import addon="script.module.oauth2client"         version="1.4.7"/>
        <import addon="script.module.requests"             version="2.8.1"/>
        <import addon="script.module.decorator"            version="3.4.0"/>
        <import addon="script.module.linuxwhatelse.mapper" version="1.1.0"/>

        <!-- Outdated... include in lib folder
        <import addon="script.module.protobuf"             version="2.5.0"/>
        <import addon="script.module.mutagen"              version="1.22.0"/>
        -->
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>audio</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" start="login"/>

    <extension point="kodi.context.item" library="context.py">
        <item>
            <label>30060</label>
            <visible>Window.IsActive(musicplaylist) + SubString(ListItem.Path,plugin://plugin.audio.linuxwhatelse.gmusic)</visible>
        </item>
    </extension>

    <extension point="xbmc.addon.metadata">
        <platform>linux windx</platform>
        <summary lang="en">Google Play Music</summary>
        <description lang="en">Plugin that lets you manage and stream music from Google Play Music</description>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, June 2007</license>
        <forum>http://forum.kodi.tv/showthread.php?tid=245754</forum>
        <source>https://github.com/linuxwhatelse/plugin.audio.linuxwhatelse.gmusic</source>
        <website>http://www.linuxwhatelse.com</website>
        <email>info@linuxwhatelse.com</email>
    </extension>

</addon>
